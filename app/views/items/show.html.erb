<% content_for :head do %>
  <title><%= @item.title %> - モノリスト</title>
  <meta name="description" content=<%= @item.title %>を持っている人と欲しい人のリスト>
  <meta name="application-name" content="モノリスト">
  <meta name="author" content="taiki watanabe">
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <%= image_tag @item.large_image, alt: @item.title %>
        </div>
      </div>
      <div class="title">
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% if @item.have_users.present? %>
            <% @item.have_users.each do |user| %>
              <%= link_to gravatar_for(user, size: 20), user_path(user) %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% if @item.want_users.present? %>
            <% @item.want_users.each do |user| %>
              <%= link_to gravatar_for(user, size: 20), user_path(user) %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to('楽天詳細ページへ', @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
